    <style name="Theme.AbleCommunity.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Base.Theme.AbleCommunity.Noactionbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
